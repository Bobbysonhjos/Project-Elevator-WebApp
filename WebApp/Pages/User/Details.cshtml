@page
@model WebApp.Pages.User.DetailsModel
@{
    ViewData["Title"] = "Details";
}





<div class="container shadow border border-1 rounded-3 my-5 p-4 no-select bg-white">
    <div class="position-relative">
        <div class="position-absolute top-0 end-0 ">
            <a class="me-3 mt-1 no-anchor text-muted" asp-page="/User" asp-route-user="@Model.User" asp-route-userId="@Model.User.Id">
                <i class="fa-regular fa-pen-to-square fa-xl"></i>
            </a>
        </div>
    </div>
    <div class="row row-eq-height p-4">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-sm-3">
                    <p class="fw-bold mb-0">Id</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0">@Model.User.Id</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-eq-height p-4">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-sm-3">
                    <p class="fw-bold mb-0">Role</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0">@Model.User.Role</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-eq-height p-4">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-sm-3">
                    <p class="fw-bold mb-0">Firstname</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0">@Model.User.FirstName</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-eq-height p-4">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-sm-3">
                    <p class="fw-bold mb-0">Lastname</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0">@Model.User.LastName</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-eq-height p-4">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-sm-3">
                    <p class="fw-bold mb-0">PhoneNumber</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0">@Model.User.PhoneNumber</p>
                </div>
            </div>
        </div>
    </div>
</div>